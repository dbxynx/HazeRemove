<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/test_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:text="测试模式"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings_white_36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:layout_marginBottom="60dp"/>

        <ImageButton
            android:id="@+id/take_photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_fiber_manual_record_white_48dp"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/image_video_change_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_videocam_white_36dp"
            android:background="@android:color/transparent"/>

    </RelativeLayout>
</LinearLayout>